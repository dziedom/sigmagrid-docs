{
  "name": "SigmaGrid",
  "version": "1.0",
  "updated_at": "2025-12-12",
  "description": "SigmaGrid provides paid, institutional-grade fundamentals and regime context for synthetic-equity perpetual markets.",
  "website": "https://www.sigmagrid.app",
  "api_base": "https://api.sigmagrid.app",
  "capabilities": [
    {
      "id": "signals.consolidated",
      "description": "Master consolidated view for a given ticker, including all core mandatory fields and optional macro betas.",
      "endpoint": "/v1/signals/{ticker}",
      "method": "GET",
      "pricing": "Per-request via x402"
    },
    {
      "id": "premium.arbitrage",
      "description": "Cross-venue arbitrage metrics (basis vs fair_value).",
      "endpoint": "/v1/premium/{ticker}",
      "method": "GET",
      "pricing": "Per-request via x402"
    },
    {
      "id": "drift.directional",
      "description": "Directional bias surface for a given ticker.",
      "endpoint": "/v1/drift/{ticker}",
      "method": "GET",
      "pricing": "Per-request via x402"
    },
    {
      "id": "regime.risk",
      "description": "Regime and risk sizing information.",
      "endpoint": "/v1/regime/{ticker}",
      "method": "GET",
      "pricing": "Per-request via x402"
    },
    {
      "id": "events.macro",
      "description": "Macro event surface for a given ticker.",
      "endpoint": "/v1/events/{ticker}",
      "method": "GET",
      "pricing": "Per-request via x402"
    },
    {
      "id": "arbitrage.carry",
      "description": "Carry and mean-reversion-focused view.",
      "endpoint": "/v1/arbitrage/{ticker}",
      "method": "GET",
      "pricing": "Per-request via x402"
    },
    {
      "id": "historical.data",
      "description": "Historical data for a given ticker.",
      "endpoint": "/v1/historical/{ticker}",
      "method": "GET",
      "pricing": "Per-request via x402"
    },
    {
      "id": "snapshot.multi",
      "description": "Multi-ticker snapshot for multiple tickers.",
      "endpoint": "/v1/snapshot",
      "method": "GET",
      "pricing": "Per-request via x402"
    }
  ],
  "payments": {
    "protocol": "x402",
    "currency": "USDC",
    "notes": "Endpoints may return HTTP 402 with payment instructions."
  },
  "support": {
    "email": "support@sigmagrid.app"
  }
}
