{
  "name": "sigmagrid",
  "version": "1.0.0",
  "description": "SigmaGrid — Institutional fundamentals API for synthetic-equity perpetuals (SPY-PERP, QQQ-PERP, TSLA-PERP, etc.). Public docs live now — Paid API launching Q1 2026.",
  "homepage": "https://sigmagrid.app",
  "api": {
    "base_url": "https://api.sigmagrid.app",
    "schema": "https",
    "status": "planned",
    "launch_window": "Q1 2026"
  },
  "tools": [
    {
      "name": "signals",
      "description": "Master consolidated view for a given ticker, including all core mandatory fields and optional macro betas.",
      "type": "http",
      "method": "GET",
      "path": "/signals/{ticker}",
      "path_params": [
        {
          "name": "ticker",
          "type": "string",
          "description": "Underlying symbol such as SPY, QQQ, TSLA."
        }
      ]
    },
    {
      "name": "premium",
      "description": "Cross-venue arbitrage metrics (basis vs fair_value).",
      "type": "http",
      "method": "GET",
      "path": "/premium/{ticker}"
    },
    {
      "name": "drift",
      "description": "Directional bias surface for a given ticker.",
      "type": "http",
      "method": "GET",
      "path": "/drift/{ticker}"
    },
    {
      "name": "regime",
      "description": "Regime and risk sizing information.",
      "type": "http",
      "method": "GET",
      "path": "/regime/{ticker}"
    },
    {
      "name": "events",
      "description": "Macro event surface for a given ticker.",
      "type": "http",
      "method": "GET",
      "path": "/events/{ticker}"
    },
    {
      "name": "arbitrage",
      "description": "Carry and mean-reversion-focused view.",
      "type": "http",
      "method": "GET",
      "path": "/arbitrage/{ticker}"
    }
  ],
  "fields": {
    "core": [
      "timestamp",
      "ticker",
      "fair_value",
      "vol_forecast_1h",
      "vol_forecast_4h",
      "regime",
      "drift_1h",
      "drift_overnight",
      "event_next",
      "event_impact",
      "event_bias"
    ],
    "extended": [
      "fv_upper",
      "fv_lower",
      "premiums",
      "z_score",
      "reversion_prob",
      "shock_index"
    ],
    "optional_macro": [
      "beta_macro",
      "beta_yield",
      "beta_dollar",
      "beta_vol_index"
    ]
  },
  "pricing": {
    "model": "per-request",
    "denomination": "stablecoin",
    "mechanism": "x402",
    "note": "Pricing varies based on value of the feed."
  }
}

